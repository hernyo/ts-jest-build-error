{
    "extends": ["tslint:recommended", "tslint-react", "tslint-config-prettier"],
    "rules": {
      "interface-name": false,
      "max-line-length": false,
      "object-literal-sort-keys": false,
      "whitespace": [true,
        "check-branch",
        "check-decl",
        "check-operator",
        "check-module",
        "check-separator",
        "check-rest-spread",
        "check-type",
        "check-typecast",
        "check-type-operator",
        "check-preblock"],
      "quotemark": [true, "double"]
    },
    "linterOptions":  {
      "exclude": [
        "node_modules/**/*.ts",
        "dist"
      ]
    }
  }